                                                            <span class="badge badge-danger">Inactivo</span>
                                                        }

                                                    </td>
                                                

                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="13" class="text-center">No hay datos</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <partial name="_Pager" model="@pager" />
                </div>
            </div>
        </div>
    </div>
    <br />
</div>

<script>
    function buscarActivo() {
        console.log("Ejecutando buscarContacto()");
        var filter = $('#filterInputActivo').val();
        var idEmpleado = $('#hiddenEmpleadoId').val();

        if (!idEmpleado) {
            toastr.warning('Empleado no identificado.');
            return;
        }

        var url = `/Empleado/LoadEmpleado?id=${idEmpleado}&filter=${encodeURIComponent(filter)}`;
        $.get(url, function (data) {
            $('#custom-tabs-two-Empleado').html(data);
        }).fail(function () {
            toastr.error('Error al cargar los contactos filtrados.');
        });
    }

    function paginarActivo(pagina) {
        var idEmpleado = $('#hiddenEmpleadoId').val();
        var filtro = $('#filterInputActivo').val();

        $.get(`/Empleado/LoadEmpleado?id=${idEmpleado}&filter=${encodeURIComponent(filtro)}&pg=${pagina}`, function (data) {
            $('#custom-tabs-two-Empleado').html(data);
        });
    }



</script>


