                            <div class="panel-body">
                                <div class="form-vertical">
                                    <div class="row m-1">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <form method="get" asp-controller="EmpleadoAusencium" asp-action="Index">
                                                    <div class="row">
                                                        <div class="col-sm-6 btn-group btn-group-justified" role="group">
