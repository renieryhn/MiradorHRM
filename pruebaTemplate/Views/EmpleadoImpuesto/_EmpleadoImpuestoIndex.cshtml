@model IEnumerable<PlanillaPM.Models.EmpleadoImpuesto>
@using PlanillaPM.Models;

@{
    ViewData["Title"] = "Index";
    Pager pager = new Pager();
    int PageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        PageNo = pager.CurrentPage;
    }

}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">

            <div class="card-header">
                <h3 class="card-title">Empleado Impuesto</h3>
                <div class="card-tools">
                </div>
            </div>
            <input type="hidden" id="hiddenEmpleadoId" value="@ViewBag.CurrentIdEmpleado" />
            <div class="card-body">
                <div class="">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-vertical">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <form id="fSearch" method="get" asp-controller="EmpleadoImpuesto" asp-action="Index">
                                                <div class="row">
                                                    <div class="col-sm-6 btn-group btn-group-justified" role="group">
                                                        <input type="text" id="filterInputImpuesto" class="form-control" placeholder="Buscar por Impuesto..." value="@ViewBag.Filter">
                                                        <button type="button" class="btn" style="background-color: var(--blue);" onclick="buscarImpuesto()">
                                                            <i class="fa fa-search" style="color: white;"></i>
                                                        </button>
                                                    </div>
                                                    <div class="col-sm-6 btn-toolbar" role="toolbar" id="toolbar">
                                                        <div class="btn-group btn-group-justified" role="group">
                                                            @* <a asp-controller="EmpleadoImpuesto" asp-action="Index" class="btn " style="background-color: var(--blue);"><i class="fa fa-refresh" style="color: white;"></i></a> *@
                                                            <a asp-controller="EmpleadoImpuesto" asp-action="Create" class="btn " asp-route-id="1" asp-route-idEmpleado="@ViewBag.CurrentIdEmpleado" style="background-color: var(--blue);"><i class="fa fa-plus" style="color: white;"></i></a>
                                                            <a asp-controller="EmpleadoImpuesto" asp-action="Download" class="btn " style="background-color: var(--blue);"
                                                               asp-route-filter="@Convert.ToString(ViewBag.Filter)"
                                                               asp-route-idEmpleado="@Convert.ToString(ViewBag.CurrentIdEmpleado)"
                                                            ><i class="fa fa-file-excel-o" style="color: white;"></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row m-1">
                        <div id="resultados" class="table-responsive table-striped table-sm">
                            <table id="table" cellspacing="0" class="table table-striped projects" data-toggle="table">
                                <thead class="thead-light">
                                    <tr>
                                        <th data-sortable="true">No.</th>
                                        <th></th>
                                        <th data-sortable="true">
                                            @Html.DisplayNameFor(model => model.Excento)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IdEmpleadoNavigation)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IdImpuestoNavigation)
                                        </th>
                                        <th data-sortable="true">
                                            @Html.DisplayNameFor(model => model.Orden)
                                        </th>
                                        <th data-sortable="true">
                                            @Html.DisplayNameFor(model => model.FechaCreacion)
                                        </th>
                                        <th data-sortable="true">
                                            @Html.DisplayNameFor(model => model.Activo)
                                        </th>
                                        <th data-sortable="true">
                                            @Html.DisplayNameFor(model => model.FechaModificacion)
                                        </th>
                                        <th data-sortable="true">
                                            @Html.DisplayNameFor(model => model.CreadoPor)
                                        </th>
                                        <th data-sortable="true">
                                            @Html.DisplayNameFor(model => model.ModificadoPor)
                                        </th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int count = (pager.CurrentPage * pager.PageSize) - pager.PageSize;
                                    }
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var item in Model)
                                        {
                                            count = (count + 1);
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group" style="font-size: 12px; padding: 4px;">
                                                        <a asp-controller="EmpleadoImpuesto" asp-action="Edit" asp-route-numero="1" class="btn " style="background-color: var(--blue)" asp-route-id="@item.IdEmpleadoImpuesto"><i class="fa fa-pencil" style="color: white;"></i></a>
                                                        @* <a asp-controller="EmpleadoImpuesto" asp-action="Details" class="btn " style="background-color: var(--blue)" asp-route-id="@item.IdEmpleadoImpuesto"><i class="fa fa-address-card-o" style="color: white;"></i></a> *@
                                                        <a asp-controller="EmpleadoImpuesto" asp-action="Delete" asp-route-numero="1" class="btn " style="background-color: var(--blue)" asp-route-id="@item.IdEmpleadoImpuesto"><i class="fa fa-trash-o" style="color: white;"></i></a>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    @if (item.Excento)
                                                    {
                                                        <i class="fas fa-check text-success"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-ban text-danger"></i>
                                                    }
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.NombreCompleto)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IdImpuestoNavigation.NombreImpuesto)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Orden)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaCreacion)
                                                </td>
                                                <td class="text-center">
                                                    @if (item.Activo)
                                                    {
                                                        <span class="badge badge-success">Activo</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-danger">Inactivo</span>
                                                    }
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaModificacion)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CreadoPor)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ModificadoPor)
                                                </td>
                                            
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                    <tr>
                                        <td colspan="13" class="text-center">No hay información disponible.</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <partial name="_Pager" model="@pager" />
            </div>

        </div>
    </div>
    <br />
</div>

<script>

    function paginarImpuesto(pagina) {
        var idEmpleado = $('#hiddenEmpleadoId').val();
        var filtro = $('#filterInputImpuesto').val();

        $.get(`/NominaEmpleado/LoadImpuesto?id=${idEmpleado}&filter=${encodeURIComponent(filtro)}&pg=${pagina}`, function (data) {
            $('#custom-tabs-two-messages').html(data);
        });
    }



    function buscarImpuesto() {
        var filter = $('#filterInputImpuesto').val();
        var idEmpleado = $('#hiddenEmpleadoId').val();

        if (!idEmpleado) {
            toastr.warning('Empleado no identificado.');
            return;
        }

        var url = `/NominaEmpleado/LoadImpuesto?id=${idEmpleado}&filter=${encodeURIComponent(filter)}&pg=1`;

        $.get(url, function (data) {
            $('#custom-tabs-two-messages').html(data);
        }).fail(function () {
            toastr.error('Error al cargar los impuestos filtrados.');
        });
    }

</script>
