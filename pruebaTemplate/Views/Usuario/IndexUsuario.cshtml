@model IEnumerable<PlanillaPM.ViewModel.UsuarioListadoViewModel>
@using PlanillaPM.Models;

@{
    ViewData["Title"] = "Index";
    var userPermissions = ViewData["UserPermissions"] as List<string>;
    Pager pager = new Pager();
    int PageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        PageNo = pager.CurrentPage;
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewData["mensaje"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            toastr.success('@Html.Raw(ViewData["mensaje"])');
        });
    </script>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header" style="background-color: var(--blue);">
                    <h3 class="card-title">Lista de Usuarios</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="">
                        <div class="form-vertical">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <form id="fSearch" method="get" asp-action="IndexUsuario">
                                            <div class="row">
                                                <div class="col-sm-6 btn-group btn-group-justified" role="group">
                                                    <input type="text" style="width: 300px;" id="inNombre" class="form-control" name="filter" placeholder="Buscar..." value="@ViewBag.Filter">
                                                    <button class="btn " style="background-color: var(--blue)" type="submit" class="btn btn-info"><i class="fa fa-search" style="color: white;"></i></button>
                                                </div>
                                                <div class="col-sm-6 btn-toolbar" role="toolbar" id="toolbar">
                                                    <div class="btn-group btn-group-justified" role="group">
                                                        <a asp-action="IndexUsuario" class="btn " style="background-color: var(--blue);"><i class="fa fa-refresh" style="color: white;"></i></a>

                                                        <a asp-controller="Usuario" asp-action="Create" class="btn " style="background-color: var(--blue);"><i class="fa fa-plus" style="color: white;"></i></a>
                                                        <a asp-action="Download" class="btn " asp-route-filter="@ViewBag.Filter" style="background-color: var(--blue);"><i class="fa fa-file-excel-o" style="color: white;"></i></a>

                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row m-1">
                            <div id="resultados" class="table-responsive table-striped table-sm">
                                <table class="table table-striped" id="userTable">
                                    <thead>
                                        <tr>
                                            <th>
                                                User
                                            </th>
                                            <th>
                                                Nombre
                                            </th>
                                            <th>Estado</th>
                                            <th style="width:10%">
                                                Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="row">
                                                        <div class="col-sm">
                                                            <a asp-controller="Usuario" asp-action="Edit"
                                                               asp-route-id="@user.Id"
                                                               class="btn btn-sm btn-warning">
                                                                <i class="fas fa-edit"></i> @user.UserName
                                                            </a>
                                                            <br>
                                                            <small>
                                                                @user.Id
                                                            </small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <a>
                                                        @user.NombreCompleto
                                                        <small>
                                                            @user.UnidadNombre
                                                        </small>
                                                    </a>
                                                </td>
                                                <td>                                                  
                                                    <span class="badge @(user.Activo == true ? "bg-success" : "bg-secondary")">
                                                        @(user.Activo == true ? "Sí" : "No")
                                                    </span>

                                                </td>
                                                <td>
                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            Action
                                                        </button>
                                                        <div class="dropdown-menu shadow animated--grow-in">
                                                            <a style='margin-right:16px' asp-controller="userroles" asp-action="Index" asp-route-userId="@user.Id" class="dropdown-item">
                                                                <i class="fas fa-wrench"></i> Administrar Roles
                                                            </a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="card-footer">
                        <partial name="_Pager" model="@pager" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}