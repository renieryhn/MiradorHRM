    $(document).ready(function () {
        var tab = getParameterByName('tab');
        if (tab === 'profile') {
            $('#custom-tabs-two-profile-tab').tab('show');
        } else if (tab === 'messages') {
            $('#custom-tabs-two-messages-tab').tab('show');
        } else if (tab === 'settings') {
            $('#custom-tabs-two-settings-tab').tab('show');
        } else if (tab === 'Experiencium') {
            $('#custom-tabs-two-Experiencium-tab').tab('show');
        } else if (tab === 'Habilidad') {
            $('#custom-tabs-two-Habilidad-tab').tab('show');
        } else if (tab === 'Ausencias') {
            $('#custom-tabs-two-Ausencias-tab').tab('show');
        } else if (tab === 'Empleado') {
            $('#custom-tabs-two-Empleado-tab').tab('show');
        }
    });


    function getParameterByName(name, url = window.location.href) {
        name = name.replace(/[\[\]]/g, '\\$&');
        var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
            results = regex.exec(url);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, ' '));
    }

