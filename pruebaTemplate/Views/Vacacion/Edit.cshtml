@model PlanillaPM.Models.Vacacion

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header" style="background-color: var(--blue);">
            <h3 class="card-title">Editar Vacaciones</h3>
        </div>
         <form asp-action="Edit">
        <div class="card-body">
            <div class="callout callout-info" style="border-left-color: var(--blue);">
                <h5>Información General</h5>
                <br/>
                <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdVacacion" />
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="IdEmpleado" class="control-label"></label>
                                <select asp-for="IdEmpleado" class="form-control select2bs4 is-invalid" asp-items="ViewBag.IdEmpleado"></select>
                            </div>
                           
                            <div class="form-group">
                                <label asp-for="PeriodoVacacional" class="control-label"></label>
                                <input asp-for="PeriodoVacacional" class="form-control" type="number" required />
                                <span asp-validation-for="PeriodoVacacional" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TotalDiasPeriodo" class="control-label"></label>
                                <input asp-for="TotalDiasPeriodo" class="form-control" required />
                                <span asp-validation-for="TotalDiasPeriodo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DiasGozados" class="control-label"></label>
                                <input asp-for="DiasGozados" class="form-control" type="number" required />
                                <span asp-validation-for="DiasGozados" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DiasPendientes" class="control-label"></label>
                                <input asp-for="DiasPendientes" class="form-control" type="number" required />
                                <span asp-validation-for="DiasPendientes" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Observaciones" class="control-label"></label>
                                <input asp-for="Observaciones" class="form-control" />
                                <span asp-validation-for="Observaciones" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check form-switch ml-4">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                                </label>
                            </div>
                        </div>
                               

                                
                    
                </div>
            </div>
            <div class="callout callout-info" style="border-left-color: var(--blue); ">
                    <h5>Otros</h5>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="FechaCreacion" class="control-label"></label>
                                <input type="datetime" asp-for="FechaCreacion" class="form-control" readonly />
                                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="FechaModificacion" class="control-label"></label>
                                <input type="datetime" asp-for="FechaModificacion" class="form-control" readonly />
                                <span asp-validation-for="FechaModificacion" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="CreadoPor" class="control-label"></label>
                                <input asp-for="CreadoPor" class="form-control" readonly />
                                <span asp-validation-for="CreadoPor" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ModificadoPor" class="control-label"></label>
                                <input asp-for="ModificadoPor" class="form-control" readonly />
                                <span asp-validation-for="ModificadoPor" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
        </div>

        <div class="card-footer">
            <input type="submit" value="Guardar" class="btn btn-primary" style="background-color: var(--blue);" />
            <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
         </div>
      </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
