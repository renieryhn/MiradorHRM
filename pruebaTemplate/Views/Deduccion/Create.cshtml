@model PlanillaPM.Models.Deduccion

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header" style="background-color: var(--blue);">
            <h3 class="card-title">Crear Deduccion</h3>
        </div>
         <form asp-action="Create">
        <div class="card-body">
            <div class="callout callout-info" style="border-left-color: var(--blue);">
                <h5>Información General</h5>
                <br/>
                <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="NombreDeduccion" class="control-label"></label>
                                <input asp-for="NombreDeduccion" class="form-control" required />
                                <span asp-validation-for="NombreDeduccion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MetodoCalculo"></label>
                                @Html.DropDownListFor(model => model.MetodoCalculo, (List<SelectListItem>)ViewBag.MetodoCalculoEstado, "Seleccione un Método de Cálculo", new { @class = "form-control select2bs4 is-invalid" })
                                <span asp-validation-for="MetodoCalculo" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TipoDeduccion"></label>
                                @Html.DropDownListFor(model => model.TipoDeduccion, (List<SelectListItem>)ViewBag.TipoDeduccionEstado, "Seleccione un Tipo de Deducción", new { @class = "form-control select2bs4 is-invalid" })
                                <span asp-validation-for="TipoDeduccion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TipoCalculo"></label>
                                @Html.DropDownListFor(model => model.TipoCalculo, new SelectList(ViewBag.TipoCalculoEstado), "Seleccione un Tipo Calculo", new { @class = "form-control select2bs4 is-invalid" })
                                <span asp-validation-for="TipoCalculo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Monto" class="control-label"></label>
                                <input asp-for="Monto" class="form-control" />
                                <span asp-validation-for="Monto" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Formula" class="control-label"></label>
                                <input asp-for="Formula" class="form-control" />
                                <span asp-validation-for="Formula" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Orden" class="control-label"></label>
                                <input asp-for="Orden" class="form-control" value="@ViewBag.NextOrden" readonly />
                                <span asp-validation-for="Orden" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check form-switch ml-4">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="DeducibleImpuesto" /> @Html.DisplayNameFor(model => model.DeducibleImpuesto)
                                </label>
                            </div>
                            <div class="form-group form-check form-switch ml-4">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="AsignacionAutomatica" /> @Html.DisplayNameFor(model => model.AsignacionAutomatica)
                                </label>
                            </div>
                        </div>
                            
                           
                </div>
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Crear" class="btn btn-primary" style="background-color: var(--blue);" />
            <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
         </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
