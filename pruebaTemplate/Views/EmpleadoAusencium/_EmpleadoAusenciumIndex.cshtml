                                                            <button type="button" class="btn" style="background-color: var(--blue);" onclick="buscarAusencium()">
                                                                <i class="fa fa-search" style="color: white;"></i>
                                                            </button>
                                                        </div>
                                                        <div class="col-sm-6 btn-toolbar" role="toolbar" id="toolbar">
                                                            <div class="btn-group btn-group-justified" role="group">
                                                                @* <a asp-action="Index" class="btn " style="background-color: var(--blue);"><i class="fa fa-refresh" style="color: white;"></i></a> *@
                                                                <a asp-controller="EmpleadoAusencium" asp-action="Create" asp-route-id="1" asp-route-idEmpleado="@ViewBag.CurrentIdEmpleado" class="btn " style="background-color: var(--blue);"><i class="fa fa-plus" style="color: white;"></i></a>
