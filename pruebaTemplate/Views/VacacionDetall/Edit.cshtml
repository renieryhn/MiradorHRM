@model PlanillaPM.Models.VacacionDetalle

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header" style="background-color: var(--blue);">
            <h3 class="card-title">Editar VacacionDetalle</h3>
        </div>
         <form asp-action="Edit">
        <div class="card-body">
            <div class="callout callout-info" style="border-left-color: var(--blue);">
                <h5>Información General</h5>
                <br/>
                <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdVacacionDetalle" />
                        <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="IdVacacion" class="control-label"></label>                                  
                                    <select asp-for="IdVacacion" class="form-control select2bs4 is-invalid" asp-items="ViewBag.IdVacacion">
                                        <option></option>
                                    </select>
                                    <span asp-validation-for="IdVacacion" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdEmpleado" class="control-label"></label>
                                    <select asp-for="IdEmpleado" class="form-control select2bs4 is-invalid" asp-items="ViewBag.IdEmpleado">
                                        <option></option>
                                    </select>
                                    <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FechaSolicitud" class="control-label"></label>
                                <input asp-for="FechaSolicitud" class="form-control" type="date" required />
                                    <span asp-validation-for="FechaSolicitud" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FechaInicio" class="control-label"></label>
                                <input asp-for="FechaInicio" class="form-control" type="date" required />
                                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FechaFin" class="control-label"></label>
                                <input asp-for="FechaFin" class="form-control" type="date" required />
                                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                                </div>
                            <div class="form-group form-check form-switch ml-5">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                                </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="NumeroDiasSolicitados" class="control-label"></label>
                                    <input asp-for="NumeroDiasSolicitados" class="form-control" type="number" required/>
                                    <span asp-validation-for="NumeroDiasSolicitados" class="text-danger"></span>
                                </div>                              
                                <div class="form-group">
                                    <label asp-for="EstadoSolicitud">Estado:</label>
                                    @Html.DropDownListFor(model => model.EstadoSolicitud, new SelectList(ViewBag.Estado), "Seleccione un estado", new { @class = "form-control select2bs4 is-invalid" })
                                    <span asp-validation-for="EstadoSolicitud" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AprobadoPor" class="control-label"></label>
                                    <input asp-for="AprobadoPor" class="form-control" />
                                    <span asp-validation-for="AprobadoPor" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DiasAprobados" class="control-label"></label>
                                    <input asp-for="DiasAprobados" class="form-control" />
                                    <span asp-validation-for="DiasAprobados" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ComentariosAprobador" class="control-label"></label>
                                    <input asp-for="ComentariosAprobador" class="form-control" />
                                    <span asp-validation-for="ComentariosAprobador" class="text-danger"></span>
                                </div>

                        </div>

                    </div>
            </div>
        </div>

        <div class="card-footer">
            <input type="submit" value="Guardar" class="btn btn-primary" style="background-color: var(--blue);" />
            <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
         </div>
      </form>
    </div>
</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
