@model PlanillaPM.Models.EmpleadoAusencium

@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header" style="background-color: var(--blue);">
            <h3 class="card-title">Editar Empleado Ausencia</h3>
        </div>
        <form asp-action="Edit">
        <div class="card-body">
            <div class="callout callout-info" style="border-left-color: var(--blue);">
                <h5>Información General</h5>
                <br/>
                <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdEmpleadoAusencia" />
                        <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="IdEmpleado" class="control-label"></label>
                                    <select asp-for="IdEmpleado" class="form-control select2bs4 is-invalid" asp-items="ViewBag.IdEmpleado"></select>
                                    <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdTipoAusencia" class="control-label"></label>
                                    <select asp-for="IdTipoAusencia" class="form-control select2bs4 is-invalid" asp-items="ViewBag.IdTipoAusencia"></select>
                                    <span asp-validation-for="IdTipoAusencia" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Estado" class="control-label">Estado:</label>
                                     @Html.DropDownListFor(model => model.Estado, new SelectList(ViewBag.EstadoAusencia), "Seleccione un estado", new { @class = "form-control select2bs4 is-invalid" })
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FechaDesde" class="control-label"></label>
                            <input asp-for="FechaDesde" class="form-control" type="date" required />
                                    <span asp-validation-for="FechaDesde" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FechaHasta" class="control-label"></label>
                            <input asp-for="FechaHasta" class="form-control" type="date" required />
                                    <span asp-validation-for="FechaHasta" class="text-danger"></span>
                                </div>
                            <div class="form-group form-check form-switch ml-4">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="DiaCompleto" /> @Html.DisplayNameFor(model => model.DiaCompleto)
                                </label>
                            </div>
                        </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="HoraDesde" class="control-label"></label>
                            <input asp-for="HoraDesde" class="form-control" type="time" required />
                                    <span asp-validation-for="HoraDesde" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="HoraHasta" class="control-label"></label>
                            <input asp-for="HoraHasta" class="form-control" type="time" required />
                                    <span asp-validation-for="HoraHasta" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AprobadoPor" class="control-label"></label>
                            <input asp-for="AprobadoPor" class="form-control" required />
                                    <span asp-validation-for="AprobadoPor" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Comentarios" class="control-label"></label>
                                    <input asp-for="Comentarios" class="form-control" />
                                    <span asp-validation-for="Comentarios" class="text-danger"></span>
                                </div>
                           

                        </div>
                    
                </div>
            </div>

                <div class="callout callout-info" style="border-left-color: var(--blue); ">
                    <h5>Otros</h5>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="FechaCreacion" class="control-label"></label>
                                <input type="datetime" asp-for="FechaCreacion" class="form-control" readonly />
                                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="FechaModificacion" class="control-label"></label>
                                <input type="datetime" asp-for="FechaModificacion" class="form-control" readonly />
                                <span asp-validation-for="FechaModificacion" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="CreadoPor" class="control-label"></label>
                                <input asp-for="CreadoPor" class="form-control" readonly />
                                <span asp-validation-for="CreadoPor" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ModificadoPor" class="control-label"></label>
                                <input asp-for="ModificadoPor" class="form-control" readonly />
                                <span asp-validation-for="ModificadoPor" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
        </div>

        <div class="card-footer">
            <input type="submit" value="Guardar" class="btn btn-primary" style="background-color: var(--blue);" />
            <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
         </div>
      </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            var $table = $('#table');
            document.addEventListener('DOMContentLoaded', function () {
                var error = '@Html.Raw(TempData["Error"])';
                if (error) {
                    toastr.error(error);
                }
            });

            function validarFechas() {
                var FechaDesde = new Date($("#FechaDesde").val());
                var FechaHasta = new Date($("#FechaHasta").val());

                if (FechaDesde > FechaHasta) {
                    toastr.error("La Fecha de Fin debe ser igual o posterior a la Fecha de Inicio.");
                    return false;
                }
                return true;
            }

            // Función para validar horas
            function validarHoras() {
                var horaDesde = $("#HoraDesde").val();
                var horaHasta = $("#HoraHasta").val();

                if (horaDesde && horaHasta) {
                    if (new Date("01/01/2000 " + horaDesde) > new Date("01/01/2000 " + horaHasta)) {
                        toastr.error("La Hora de Fin debe ser posterior a la Hora de Inicio.");
                        return false;
                    }
                }
                return true;
            }


            $("form").submit(function (e) {
                if (!validarFechas() || !validarHoras()) {
                    e.preventDefault();
                }
            });


        </script>
    }
}