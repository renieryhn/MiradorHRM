@model PlanillaPM.Models.EmpleadoHorasTrabajo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header" style="background-color: var(--blue);">
            <h3 class="card-title">Editar EmpleadoHorasTrabajo</h3>
        </div>
         <form asp-action="Edit">
        <div class="card-body">
            <div class="callout callout-info" style="border-left-color: var(--blue);">
                <h5>Información General</h5>
                <br/>
                <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdEmpleadoHorasTrabajo" />
                                <div class="form-group">
                                    <label asp-for="IdEmpleado" class="control-label"></label>
                                    <input asp-for="IdEmpleado" class="form-control" />
                                    <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Fecha" class="control-label"></label>
                                    <input asp-for="Fecha" class="form-control" />
                                    <span asp-validation-for="Fecha" class="text-danger"></span>
                                </div>
                        <div class="form-group">
                            <label asp-for="Entrada" class="control-label"></label>
                            <input asp-for="Entrada" class="form-control" />
                            <span asp-validation-for="Entrada" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Salida" class="control-label"></label>
                            <input asp-for="Salida" class="form-control" />
                            <span asp-validation-for="Salida" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Receso_Desde" class="control-label"></label>
                            <input asp-for="Receso_Desde" class="form-control" />
                            <span asp-validation-for="Receso_Desde" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Receso_Hasta" class="control-label"></label>
                            <input asp-for="Receso_Hasta" class="form-control" />
                            <span asp-validation-for="Receso_Hasta" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                                    <label asp-for="TotalNormales" class="control-label"></label>
                                    <input asp-for="TotalNormales" class="form-control" />
                                    <span asp-validation-for="TotalNormales" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TotalDiurna" class="control-label"></label>
                                    <input asp-for="TotalDiurna" class="form-control" />
                                    <span asp-validation-for="TotalDiurna" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TotalNocturna" class="control-label"></label>
                                    <input asp-for="TotalNocturna" class="form-control" />
                                    <span asp-validation-for="TotalNocturna" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TotalMixta" class="control-label"></label>
                                    <input asp-for="TotalMixta" class="form-control" />
                                    <span asp-validation-for="TotalMixta" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TotalNoTrabajado" class="control-label"></label>
                                    <input asp-for="TotalNoTrabajado" class="form-control" />
                                    <span asp-validation-for="TotalNoTrabajado" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Estado" class="control-label"></label>
                                    <input asp-for="Estado" class="form-control" />
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check form-switch ml-5">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                                    </label>
                                </div>
                              
                                <div class="form-group">
                                    <label asp-for="Dispositivo" class="control-label"></label>
                                    <input asp-for="Dispositivo" class="form-control" />
                                    <span asp-validation-for="Dispositivo" class="text-danger"></span>
                                </div>
                    
                </div>
            </div>
                <div class="callout callout-info" style="border-left-color: var(--blue); ">
                    <h5>Responsable</h5>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="FechaCreacion" class="control-label"></label>
                                <input asp-for="FechaCreacion" class="form-control" disabled />
                                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="FechaModificacion" class="control-label"></label>
                                <input asp-for="FechaModificacion" class="form-control" disabled />
                                <span asp-validation-for="FechaModificacion" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="CreadoPor" class="control-label"></label>
                                <input asp-for="CreadoPor" class="form-control" disabled />
                                <span asp-validation-for="CreadoPor" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="ModificadoPor" class="control-label"></label>
                                <input asp-for="ModificadoPor" class="form-control" disabled />
                                <span asp-validation-for="ModificadoPor" class="text-danger"></span>
                            </div>

                        </div>
                    </div>

                </div>
        </div>

        <div class="card-footer">
            <input type="submit" value="Guardar" class="btn btn-primary" style="background-color: var(--blue);" />
            <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
         </div>
      </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
