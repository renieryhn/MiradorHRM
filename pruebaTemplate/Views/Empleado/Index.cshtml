@using PlanillaPM.Models
@model IEnumerable<PlanillaPM.Models.Empleado>

@{
    ViewData["Title"] = "Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Pager pager = new Pager();
    int PageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        PageNo = pager.CurrentPage;
    }
}

<div class="container-fluid">
    <!-- Main content -->
    <div class="row">
        <div class="col-12">
            <!-- Default box -->
            <div class="card card-primary">
                <div class="card-header" style="background-color: var(--blue);">
                    <h3 class="card-title">Empleados</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>               
                <div class="card-body">
                    <div class="">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="form-vertical">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <form id="fSearch" method="post" asp-action="Index">
                                                    <div class="row">
                                                        <div class="col-sm-6 btn-group btn-group-justified" role="group">
                                                            <input type="text" style="width: 300px;" id="inNombre" class="form-control" name="filter" placeholder="Buscar...">
                                                            <button class="btn " style="background-color: var(--blue)" type="submit" class="btn btn-info"><i class="fa fa-search" style="color: white;"></i></button>
                                                        </div>
                                                        <div class="col-sm-6 btn-toolbar" role="toolbar" id="toolbar">
                                                            <div class="btn-group btn-group-justified" role="group">
                                                                <a asp-action="Index" class="btn " style="background-color: var(--blue);"><i class="fa fa-refresh" style="color: white;"></i></a>
                                                                <a asp-action="Create" class="btn " style="background-color: var(--blue);"><i class="fa fa-plus" style="color: white;"></i></a>
                                                                <a asp-action="Download" class="btn " style="background-color: var(--blue);"><i class="fa fa-file-excel-o" style="color: white;"></i></a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row m-1">
                            <div id="resultados" class="table-responsive table-striped table-sm">
                                <!-- Agrega la clase table-responsive -->
                                <table id="table" cellspacing="0" class="table table-striped projects" data-toggle="table">
                                    <thead class="thead-light">
                                        <tr>
                                            <th data-sortable="true">No.</th>
                                            <th></th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.NombreCompleto)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Fotografia)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.NumeroIdentidad)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FechaNacimiento)
                                            </th>
                                            <!-- Agrega más columnas según tus necesidades -->
                                            <th>
                                                @Html.DisplayNameFor(model => model.Genero)
                                            </th>
                                        
                                            <th>
                                                @Html.DisplayNameFor(model => model.Direccion)
                                            </th>
                                            <!-- Continuar agregando más columnas según sea necesario -->
                                            <th>
                                                @Html.DisplayNameFor(model => model.Telefono)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CiudadResidencia)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Email)
                                            </th>
                                            <th>
                                                <!-- Agrega más columnas según tus necesidades -->
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Activo)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IdCargo)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IdDepartamento)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FechaInicio)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IdEncargado)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CuentaBancaria)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IdBanco)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IdTipoContrato)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IdTipoNomina)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.NumeroRegistroTributario)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.SalarioBase)
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int count = (pager.CurrentPage * pager.PageSize) - pager.PageSize;
                                        }
                                        @foreach (var item in Model)
                                        {
                                            count = (count + 1);
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group" style="font-size: 12px; padding: 4px;">
                                                        <a asp-action="Edit" class="btn " style="background-color: var(--blue)" asp-route-id="@item.IdEmpleado"><i class="fa fa-pencil" style="color: white;"></i></a>
                                                        <a asp-action="FichaEmpleado" class="btn " style="background-color: var(--blue)" asp-route-id="@item.IdEmpleado"><i class="fa fa-address-card-o" style="color: white;"></i></a>
                                                        <a asp-action="Delete" class="btn " style="background-color: var(--blue)" asp-route-id="@item.IdEmpleado"><i class="fa fa-trash-o" style="color: white;"></i></a>
                                                    </div>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NombreCompleto)
                                                </td>
                                                <td style="text-align: center;">
                                                    <ul class="list-inline" style="display: inline-block;">
                                                        <li class="list-inline-item">
                                                            <img alt="Avatar" class="table-avatar" src="@item.FotografiaBase64">
                                                        </li>
                                                    </ul>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NumeroIdentidad)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                                                </td>
                                                <!-- Agrega más celdas según tus necesidades -->
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Genero)
                                                </td>
                                               
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Direccion)
                                                </td>
                                                <!-- Continuar agregando más celdas según sea necesario -->
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Telefono)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CiudadResidencia)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </td>
                                                <td>
                                                    <!-- Agrega más celdas según tus necesidades -->
                                                </td>
                                                <td>
                                                    @* @Html.DisplayFor(modelItem => item.Activo) *@
                                                    @if (item.Activo)
                                                    {
                                                        <span class="badge badge-success">Activo</span>
                                                    }
                                                    else{
                                                        <span class="badge badge-danger">Inactivo</span>
                                                    }
                                                   
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IdCargoNavigation.NombreCargo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IdDepartamentoNavigation.NombreDepartamento)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaInicio)
                                                </td>
                                                <td>
                                                    @if (item.IdEncargado != null)
                                                    {
                                                        @Html.DisplayFor(modelItem => item.IdEncargadoNavigation.NombreCompleto)
                                                    }
                                             
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CuentaBancaria)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IdBancoNavigation.NombreBanco)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IdTipoContratoNavigation.NombreTipoContrato)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IdTipoNominaNavigation.NombreTipoNomina)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NumeroRegistroTributario)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.SalarioBase)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <partial name="_Pager" model="@pager" />
                    </div>
                   


                </div>
                <!-- /.card-body -->

            </div>
            <!-- /.card -->
        </div>
    </div>


    <!-- /.content -->

    <br />
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            $(document).ready(function () {
                var url = $("#liMenuDinamico");
                var $table = $('#table');
                $.ajax({
                    url: "Empleado/ObtenerMenuDinamico",
                    type: "GET",
                    success: function (data) {
                        $("#liMenuDinamico").html(data);
                    },
                    error: function () {
                        console.error("Error al cargar el menú dinámico");
                    }
                });
            });

            document.addEventListener('DOMContentLoaded', function () {
                var mensaje = '@Html.Raw(TempData["mensaje"])';
                if (mensaje) {
                    toastr.success(mensaje);
                }

                var error = '@Html.Raw(TempData["Error"])';
                if (error) {
                    toastr.error(error);
                }
            });
        </script>
    }
}


