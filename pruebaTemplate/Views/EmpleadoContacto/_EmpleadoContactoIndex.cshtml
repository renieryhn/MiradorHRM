@model IEnumerable<PlanillaPM.Models.EmpleadoContacto>
@using PlanillaPM.Models;

@{
    ViewData["Title"] = "_EmpleadoContactoIndex";
    Pager pager = new Pager();
    int PageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        PageNo = pager.CurrentPage;
    }   
    
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="">
                <div class="card-header" >
                    <h3 class="card-title">Contactos de Emergencia</h3>
                    <div class="card-tools">
                       
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="form-vertical">
                                    <div class="row ">
                                        <div class="col-sm-9 pl-4">
                                            <div class="form-group">
                                                <form id="fSearch" method="post" asp-action="Index">
                                                    <div class="row">
                                                        
                                                        <div class="col-sm-4 btn-group btn-group-justified" role="group">
                                                            <input type="text" style="width: 300px;" id="inNombre" class="form-control" name="filter" placeholder="Buscar..." value="@ViewBag.CurrentFilter">
                                                            <button class="btn " style="background-color: var(--blue)" type="submit" class="btn btn-info"><i class="fa fa-search" style="color: white;"></i></button>
                                                        </div>
                                                        <div class="col-sm-3 btn-toolbar" role="toolbar" id="toolbar">
                                                            <div class="btn-group btn-group-justified" role="group">
                                                                @* <a asp-controller="EmpleadoContacto" asp-action="_EmpleadoContactoIndex" class="btn " style="background-color: var(--blue);"><i class="fa fa-refresh" style="color: white;"></i></a> *@
                                                                <a asp-controller="EmpleadoContacto" asp-action="Create" asp-route-id="1" class="btn " style="background-color: var(--blue);"><i class="fa fa-plus" style="color: white;"></i></a>
                                                                <a asp-controller="EmpleadoContacto" asp-action="Download" asp-route-id="@ViewBag.idEmpleado" class="btn " style="background-color: var(--blue);"><i class="fa fa-file-excel-o" style="color: white;"></i></a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div id="resultados" class="table-responsive table-striped table-sm">
                                <table id="table" cellspacing="0" class="table table-striped projects" data-toggle="table">
                                    <thead class="thead-light">
                                        <tr>
                                            <th data-sortable="true">No.</th>
                                            <th></th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.NombreContacto)
                                            </th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.Relacion)
                                            </th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.Celular)
                                            </th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.TelefonoFijo)
                                            </th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.Activo)
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int count = (pager.CurrentPage * pager.PageSize) - pager.PageSize;
                                        }
                                        @if (Model.Any())
                                        {
                                            @foreach (var item in Model)
                                            {
                                                count = (count + 1);
                                                <tr>
                                                    <th scope="row">@count</th>
                                                    <td>
                                                        <div class="btn-group btn-group-sm" role="group" style="font-size: 12px; padding: 4px;">
                                                            <a asp-action="Edit" asp-route-numero="1" class="btn " style="background-color: var(--blue)" asp-controller="EmpleadoContacto" asp-route-id="@item.IdContactoEmergencia"><i class="fa fa-pencil" style="color: white;"></i></a>
                                                            <a asp-action="Delete" asp-route-numero="1" class="btn " style="background-color: var(--blue)" asp-controller="EmpleadoContacto" asp-route-id="@item.IdContactoEmergencia"><i class="fa fa-trash-o" style="color: white;"></i></a>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.NombreContacto)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Relacion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Celular)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TelefonoFijo)
                                                    </td>
                                                    <td>
                                                        @if (item.Activo)
                                                        {
                                                            <span class="badge badge-success">Activo</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-danger">Inactivo</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="13" class="text-center">No hay datos</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                       
                    </div>
                </div>  
            </div>
        </div>
    </div>
    <br />
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>


            $(document).ready(function () {
                var url = $("#liMenuDinamico");
                var $table = $('#table');
                $.ajax({
                    url: "Empleado/ObtenerMenuDinamico",
                    type: "GET",
                    success: function (data) {
                        $("#liMenuDinamico").html(data);
                    },
                    error: function () {
                        console.error("Error al cargar el menú dinámico");
                    }
                });

                cargarEmpleados();
            });

           


            document.addEventListener('DOMContentLoaded', function () {
                var mensaje = '@Html.Raw(TempData["mensaje"])';
                if (mensaje) {
                    toastr.success(mensaje);
                }

                var error = '@Html.Raw(TempData["Error"])';
                if (error) {
                    toastr.error(error);
                }}

                      

            });

            function cargarEmpleados() {
                $.ajax({
                    url: '/EmpleadoContacto/Filtros', // URL del método Filtros en el controlador EmpleadoContactoController
                    type: 'GET',
                    success: function (data) {
                        // Aquí manejas la respuesta del servidor, que contendrá la lista de empleados
                        // Actualiza las opciones del select con los datos recibidos
                        $.each(data, function (index, empleado) {
                            $('#IdEmpleado').append($('<option>', {
                                value: empleado.value,
                                text: empleado.text
                            }));
                        });
                    },
                    error: function (xhr, status, error) {
                        // Maneja cualquier error que ocurra durante la solicitud AJAX
                        console.error('Error al cargar los empleados:', error);
                    }
                });
            }

        </script>
    }
}