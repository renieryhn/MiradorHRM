@model PlanillaPM.Models.Deduccion

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header" style="background-color: var(--blue);">
            <h3 class="card-title">Editar Division</h3>
        </div>
         <form asp-action="Edit">
        <div class="card-body">
            <div class="callout callout-info" style="border-left-color: var(--blue);">
                <h5>Información General</h5>
                <br/>
                <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdDeduccion" />
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="NombreDeduccion" class="control-label"></label>
                                <input asp-for="NombreDeduccion" class="form-control" required />
                                <span asp-validation-for="NombreDeduccion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Tipo">Tipo:</label>
                                @Html.DropDownListFor(model => model.Tipo, new SelectList(ViewBag.TipoDeduccion), "Seleccione un ingreso", new { @class = "form-control select2bs4 is-invalid" })
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Monto" class="control-label"></label>
                                <input asp-for="Monto" class="form-control" type="number" />
                                <span asp-validation-for="Monto" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Formula" class="control-label"></label>
                                <input asp-for="Formula" class="form-control" type="number" />
                                <span asp-validation-for="Formula" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check form-switch ml-4">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="DeducibleImpuesto" /> @Html.DisplayNameFor(model => model.DeducibleImpuesto)
                                </label>
                            </div>
                            <div class="form-group form-check form-switch ml-4">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="BasadoEnTodo" /> @Html.DisplayNameFor(model => model.BasadoEnTodo)
                                </label>
                            </div>
                            <div class="form-group form-check form-switch ml-4">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                                </label>
                            </div>
                        </div>


                    </div>
            </div>
            <div class="callout callout-info" style="border-left-color: var(--blue); ">
                    <h5>Otros</h5>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="FechaCreacion" class="control-label"></label>
                                <input type="datetime" asp-for="FechaCreacion" class="form-control" readonly />
                                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="FechaModificacion" class="control-label"></label>
                                <input type="datetime" asp-for="FechaModificacion" class="form-control" readonly />
                                <span asp-validation-for="FechaModificacion" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="CreadoPor" class="control-label"></label>
                                <input asp-for="CreadoPor" class="form-control" readonly />
                                <span asp-validation-for="CreadoPor" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ModificadoPor" class="control-label"></label>
                                <input asp-for="ModificadoPor" class="form-control" readonly />
                                <span asp-validation-for="ModificadoPor" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
        </div>

        <div class="card-footer">
            <input type="submit" value="Guardar" class="btn btn-primary" style="background-color: var(--blue);" />
            <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
         </div>
      </form>
    </div>
</div>

