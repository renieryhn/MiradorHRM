@model PlanillaPM.Models.PermissionViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card card-primary">
                            <div class="card-header" style="background-color: var(--blue);">
                                <h3 class="card-title">Permisos</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="">
                                    <div class="panel panel-default">
                                        <div class="panel-body">
                                            <div class="form-vertical">
                                                <div class="row">
                                                    <div class="row m-1">
                                                        <div class="form-group">
                                                            <form asp-controller="permission" method="post" asp-action="Update" class="d-inline">
                                                                <input asp-for="RoleId" type="hidden" />
                                                                <h4>Asignar Permisos</h4>
                                                                <table class="table table-striped" id="permissionTable">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Rol</th>
                                                                            <th>View</th>
                                                                            <th>Create</th>
                                                                            <th>Edit</th>
                                                                            <th>Delete</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        <tr>
                                                                            <td>@Model.RoleId</td>
                                                                            <td>
                                                                                <div class="form-check m-1">
                                                                                    <input asp-for="@Model.UnassignedPermissions.FirstOrDefault(p => p.Value == "View").Selected" class="form-check-input" />
                                                                                </div>
                                                                            </td>
                                                                            <td>
                                                                                <div class="form-check m-1">
                                                                                    <input asp-for="@Model.UnassignedPermissions.FirstOrDefault(p => p.Value == "Create").Selected" class="form-check-input" />
                                                                                </div>
                                                                            </td>
                                                                            <td>
                                                                                <div class="form-check m-1">
                                                                                    <input asp-for="@Model.UnassignedPermissions.FirstOrDefault(p => p.Value == "Edit").Selected" class="form-check-input" />
                                                                                </div>
                                                                            </td>
                                                                            <td>
                                                                                <div class="form-check m-1">
                                                                                    <input asp-for="@Model.UnassignedPermissions.FirstOrDefault(p => p.Value == "Delete").Selected" class="form-check-input" />
                                                                                </div>
                                                                            </td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>

                                                                <div class="col-sm-12">
                                                                    <button style="background-color: var(--blue);" type="submit" class="btn btn-success">
                                                                        Guardar
                                                                    </button>
                                                                </div>
                                                            </form>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="card-footer">
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        </div>
        <div class="col">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card card-primary">
                            <div class="card-header" style="background-color: var(--blue);">
                                <h3 class="card-title">Permisos</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="">
                                    <div class="panel panel-default">
                                        <div class="panel-body">
                                            <div class="form-vertical">
                                                <div class="row">
                                                    <div class="row m-1">
                                                        <div class="form-group">
                                                            <form asp-controller="permission" method="post" asp-action="RemovePermissions" class="d-inline">
                                                                <input asp-for="@Model.RoleId" type="hidden" />
                                                                @* <input type="hidden" name="action" value="RemovePermissions" /> *@
                                                                <h4>Quitar Permisos</h4>
                                                                <table class="table table-striped" id="permissionTable">
                                                                    <thead>
                                                                        <tr>

                                                                            <th>
                                                                                Permission
                                                                            </th>                                                                         
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                            <tr>
                                                                                <td>@Model.RoleId</td>
                                                                            </tr>
                                                                    </tbody>
                                                                </table>

                                                                <div class="col-sm-12" >
                                                                    <button style="background-color: var(--blue);" type="submit" id="save" class="btn btn-success">
                                                                        
                                                                        Guardar
                                                                    </button>
                                                                </div>
                                                            </form>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="card-footer">
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        </div>
    </div>
</div>



