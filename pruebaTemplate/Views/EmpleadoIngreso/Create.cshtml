@model PlanillaPM.Models.EmpleadoIngreso

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header" style="background-color: var(--blue);">
            <h3 class="card-title">Crear Empleado Ingreso</h3>
        </div>
         <form asp-action="Create">
        <div class="card-body">
            <div class="callout callout-info" style="border-left-color: var(--blue);">
                <h5>Información General</h5>
                <br/>
                <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="IdIngreso" class="control-label"></label>                           
                                <select asp-for="IdIngreso" class="form-control select2bs4 is-invalid" asp-items="ViewBag.IdIngreso"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="IdEmpleado" class="control-label"></label>                            
                                <select asp-for="IdEmpleado" class="form-control select2bs4 is-invalid" asp-items="ViewBag.IdEmpleado"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Tipo"></label>
                                @Html.DropDownListFor(model => model.Tipo, new SelectList(ViewBag.TipoEstado), "Seleccione un estado", new { @class = "form-control select2bs4 is-invalid" })
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Monto" class="control-label"></label>
                                <input asp-for="Monto" class="form-control" type="number" />
                                <span asp-validation-for="Monto" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Formula" class="control-label"></label>
                                <input asp-for="Formula" class="form-control" type="number" />
                                <span asp-validation-for="Formula" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Orden" class="control-label"></label>
                                <input asp-for="Orden" class="form-control" type="number" required />
                                <span asp-validation-for="Orden" class="text-danger"></span>
                            </div>
                        </div>
                           
                </div>
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Crear" class="btn btn-primary" style="background-color: var(--blue);" />
            <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
         </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
