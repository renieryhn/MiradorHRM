                                                            @* <a asp-controller="EmpleadoActivo" asp-action="Details" class="btn " style="background-color: var(--blue)" asp-route-id="@item.IdEmpleadoActivo"><i class="fa fa-address-card-o" style="color: white;"></i></a> *@
