            <script>

                function paginarContrato(pagina) {
        var idEmpleado = $('#hiddenEmpleadoId').val();
        var filtro = $('#filterInputContrato').val();

        $.get(`/Empleado/LoadContratos?id=${idEmpleado}&filter=${encodeURIComponent(filtro)}&pg=${pagina}`, function (data) {
            $('#custom-tabs-two-messages').html(data);
        });
    }

                    function buscarContrato() {
        var filter = $('#filterInputContrato').val();
        var idEmpleado = $('#hiddenEmpleadoId').val();

        if (!idEmpleado) {
            toastr.warning('Empleado no identificado.');
            return;
        }

        var url = `/Empleado/LoadContratos?id=${idEmpleado}&filter=${encodeURIComponent(filter)}`;
        $.get(url, function (data) {
            $('#custom-tabs-two-messages').html(data);
        }).fail(function () {
            toastr.error('Error al cargar contratos.');
        });
    }

            </script>
       
