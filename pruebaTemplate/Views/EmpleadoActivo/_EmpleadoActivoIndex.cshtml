                                                        </div>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Model)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.NumeroSerie)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.NombreCompleto)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.IdProductoNavigation.NombreProducto)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Estado)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Cantidad)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PrecioEstimado)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.FechaAsignacion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                                    </td>
                                                    <td>
                                                        @* @Html.DisplayFor(modelItem => item.Activo) *@
