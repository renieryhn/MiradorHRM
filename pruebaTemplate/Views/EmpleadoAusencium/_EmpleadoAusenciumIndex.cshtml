@model IEnumerable<PlanillaPM.Models.EmpleadoAusencium>
@using PlanillaPM.Models;

@{
    ViewData["Title"] = "_EmpleadoAusenciumIndex";
   
    Pager pager = new Pager();
    int PageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        PageNo = pager.CurrentPage;
    }

}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="">
                <div class="card-header">
                    <h3 class="card-title">Empleado Ausencia</h3>
                    <div class="card-tools">
                    </div>
                </div>
                <input type="hidden" id="hiddenEmpleadoId" value="@ViewBag.CurrentIdEmpleado" />
