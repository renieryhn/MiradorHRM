@using PlanillaPM.Models
@model IEnumerable<PlanillaPM.Models.Empleado>

@{
    ViewData["Title"] = "Empleado";
    var userPermissions = ViewData["UserPermissions"] as List<string>;
    Layout = "~/Views/Shared/_Layout.cshtml";
    Pager pager = new Pager();
    int PageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        PageNo = pager.CurrentPage;
    }
}

<div class="container-fluid">
    <div class="alert alert-info alert-dismissible" style="background-color: var(--blue);">
        <form id="fSearch" method="get" asp-action="Index">
            <div class="row">
                <h3 style="color: #ffffff;">
                    <label>Filtros</label>
                </h3>

            </div>
            <div class="row">
                <div class="col-sm-2">
                    <select name="IdEmpleado" class="form-control select2 select2bs4">
                        <option value="">Empleado</option>
                        @foreach (var empleado in ViewBag.IdEmpleado)
                        {
                            bool isSelected = ViewBag.CurrentIdEmpleado == empleado.Value;
                            if (isSelected)
                            {
                                <option value="@empleado.Value" selected>@empleado.Text</option>
                            }
                            else
                            {
                                <option value="@empleado.Value">@empleado.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-sm-2">
                    <select name="IdTipoNomina" class="form-control select2 select2bs4">
                        <option value="">Seleccionar Tipo de nómina</option>
                        @foreach (var tipo in ViewBag.IdTipoNomina)
                        {
                            bool isSelected = ViewBag.CurrentIdTipoNomina == tipo.Value;
                            if (isSelected)
                            {
                                <option value="@tipo.Value" selected>@tipo.Text</option>
                            }
                            else
                            {
                                <option value="@tipo.Value">@tipo.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <select id="estado" name="estado" class="form-control">
                            <option value="">Todos</option>
                            <option value="0">Activos</option>
                            <option value="1">Inactivos</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="btn-group btn-group-justified" role="group">
                       @*  <input type="hidden" name="filter" value="@ViewBag.CurrentFilter"> *@
                        <input type="text" style="width: 320px;" id="filter" class="form-control" name="filter" placeholder="Buscar por Nombre Completo..." value="@ViewBag.Filter">
                        <button style="background-color: var(--blue);" type="submit" class="btn btn-info">
                            <i class="fa fa-search" style="color: white; font-size: 22px; font-weight: bold;"></i>
                        </button>

                    </div>
                </div>
                <hr>
                <div class="col-sm-6">
                    <div class="btn-group btn-group-justified" role="group">
                        <a asp-action="Index" class="btn " style="background-color: var(--blue);"><i class="fa fa-refresh" style="color: white;"></i></a>
                        @if (userPermissions.Contains("View"))
                        {
                        <a asp-controller="NominaEmpleado" asp-action="DownloadAll" class="btn " style="background-color: var(--blue);"><i class="fa fa-file-excel-o" style="color: white;"></i></a>
                        }
                    </div>
                </div>
            </div>


        </form>
    </div>
    <div class="row">
        <div class="col-12">
            <!-- Default box -->
            <div class="card card-primary">
                <div class="card-header" style="background-color: var(--blue);">
                    <h3 class="card-title">Empleados</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row m-1">
                        <div id="resultados" class="table-responsive table-striped table-sm">
                            <!-- Agrega la clase table-responsive -->
                            <table id="table" cellspacing="0" class="table table-striped projects" data-toggle="table">
                                <thead class="thead-light">
                                    <tr>
                                        <th data-sortable="true">No.</th>
                                        <th></th>
                                        <th data-sortable="true">
                                            @Html.DisplayNameFor(model => model.NombreCompleto)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NumeroIdentidad)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IdTipoNomina)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Telefono)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IdCargo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IdDepartamento)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FechaInicio)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IdBanco)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CuentaBancaria)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SalarioBase)
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int count = (pager.CurrentPage * pager.PageSize) - pager.PageSize;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        count = (count + 1);
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group" style="font-size: 12px; padding: 4px;">
                                                    @if (userPermissions.Contains("View"))
                                                    {
                                                    <a asp-action="IDIEmpleado" class="btn " style="background-color: var(--blue)" asp-route-id="@item.IdEmpleado"><i class="fa fa-address-card" style="color: white;"></i></a>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NombreCompleto)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NumeroIdentidad)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdTipoNominaNavigation.NombreTipoNomina)
                                            </td>
                                            <!-- Continuar agregando más celdas según sea necesario -->
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Telefono)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdCargoNavigation.NombreCargo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdDepartamentoNavigation.NombreDepartamento)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaInicio)
                                            </td>
                                            <td>
                                                @if (item.IdBancoNavigation != null)
                                                {
                                                    @Html.DisplayFor(modelItem => item.IdBancoNavigation.NombreBanco)
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CuentaBancaria)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SalarioBase)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <partial name="_Pager" model="@pager" />
                </div>



            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->
    </div>
</div>


<!-- /.content -->

<br />
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            $(document).ready(function () {
                var url = $("#liMenuDinamico");
                var $table = $('#table');
                $.ajax({
                    url: "NominaEmpleado/ObtenerMenuDinamico",
                    type: "GET",
                    success: function (data) {
                        $("#liMenuDinamico").html(data);
                    },
                    error: function () {
                        console.error("Error al cargar el menú dinámico");
                    }
                });
            });

            document.addEventListener('DOMContentLoaded', function () {
                var mensaje = '@Html.Raw(TempData["mensaje"])';
                if (mensaje) {
                    toastr.success(mensaje);
                }

                var error = '@Html.Raw(TempData["Error"])';
                if (error) {
                    toastr.error(error);
                }
            });

            var estado = "@ViewBag.CurrentEstado"; // Obtener el valor del ViewBag en JavaScript

            // Seleccionar la opción correspondiente al estado actual
            var selectElement = document.getElementById("estado");
            for (var i = 0; i < selectElement.options.length; i++) {
                if (selectElement.options[i].value === estado) {
                    selectElement.options[i].selected = true;
                    break;
                }
            }
        </script>
    }
}


