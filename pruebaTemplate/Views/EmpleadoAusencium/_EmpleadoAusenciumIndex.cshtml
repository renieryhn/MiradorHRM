                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div id="resultados" class="table-responsive table-striped table-sm">
                                <table id="table" cellspacing="0" class="table table-striped projects" data-toggle="table">
                                    <thead class="thead-light">
                                        <tr>
                                            <th data-sortable="true">No.</th>
                                            <th></th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IdEmpleadoNavigation)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IdTipoAusenciaNavigation)
                                            </th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.DiaCompleto)
                                            </th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.Estado)
                                            </th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.FechaDesde)
                                            </th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.FechaHasta)
                                            </th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.HoraDesde)
                                            </th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.HoraHasta)
                                            </th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.AprobadoPor)
                                            </th>
                                            <th data-sortable="true">
                                                @Html.DisplayNameFor(model => model.Comentarios)
                                            </th>                                          
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int count = (pager.CurrentPage * pager.PageSize) - pager.PageSize;
                                        }
                                         @if (Model.Any())
                                        {
                                            @foreach (var item in Model)
                                            {
                                                count = (count + 1);
                                                <tr>
                                                    <th scope="row">@count</th>
                                                    <td>
                                                        <div class="btn-group btn-group-sm" role="group" style="font-size: 12px; padding: 4px;">
                                                            <a asp-controller="EmpleadoAusencium" asp-action="Edit" asp-route-numero="1" class="btn " style="background-color: var(--blue)" asp-route-id="@item.IdEmpleadoAusencia"><i class="fa fa-pencil" style="color: white;"></i></a>
                                                            @* <a asp-action="Details" class="btn " style="background-color: var(--blue)" asp-route-id="@item.IdEmpleadoAusencia"><i class="fa fa-address-card-o" style="color: white;"></i></a> *@
                                                            <a asp-controller="EmpleadoAusencium" asp-action="Delete" asp-route-numero="1" class="btn " style="background-color: var(--blue)" asp-route-id="@item.IdEmpleadoAusencia"><i class="fa fa-trash-o" style="color: white;"></i></a>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.NombreCompleto)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.IdTipoAusenciaNavigation.NombreTipoAusencia)
                                                    </td>
                                                    <td>
                                                        @* @Html.DisplayFor(modelItem => item.Activo) *@
                                                        @if (item.DiaCompleto)
                                                        {
                                                            <span class="badge badge-success">Activo</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-danger">Inactivo</span>
                                                        }

                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Estado)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.FechaDesde)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.FechaHasta)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.HoraDesde)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.HoraHasta)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.AprobadoPor)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Comentarios)
                                                    </td>
                                               
                                                   
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="13" class="text-center">No hay datos</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <partial name="_Pager" model="@pager" />
                </div>
            </div>
        </div>
    </div>
    <br />
</div>

<script>
    function buscarAusencium() {
        var filter = $('#filterInputAusencium').val();
        var idEmpleado = $('#hiddenEmpleadoId').val();

        if (!idEmpleado) {
            toastr.warning('Empleado no identificado.');
            return;
        }

        var url = `/Empleado/LoadAusencias?id=${idEmpleado}&filter=${encodeURIComponent(filter)}`;
        $.get(url, function (data) {
            $('#custom-tabs-two-Ausencias').html(data);
        }).fail(function () {
            toastr.error('Error al cargar los contactos filtrados.');
        });
    }

    function paginarAusencium(pagina) {
        var idEmpleado = $('#hiddenEmpleadoId').val();
        var filtro = $('#filterInputAusencium').val();

        $.get(`/Empleado/LoadAusencias?id=${idEmpleado}&filter=${encodeURIComponent(filtro)}&pg=${pagina}`, function (data) {
            $('#custom-tabs-two-Ausencias').html(data);
        });
    }


</script>

